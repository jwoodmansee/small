<%= link_to "#{@name}'s posts", posts_path %>
<h1><%= image_tag @post.user.image.url(:small) %><%= @post.title %></h1>

<h3><%= @post.teaser %>	</h3>

<p><%= @post.content %></p>
<br />


	<p>Comments:</p>
	<% if @post.comments.any? %>
		<% @post.comments.each do |comment| %>
		<ul>
			<li><%= comment.comment %></li>
		</ul>
		<%end%>
	<% else %>
		<p>No comments yet</p>
	<% end %>

<hr>
<%= link_to 'Add comment', new_post_comment_path(@post) %>

<hr>
<% if current_user.id == @post.user_id %>
	<%= link_to 'Your posts', posts_path %> ||
	<%= link_to 'Edit this post', edit_post_path(@post) %> ||
	<%= link_to 'Delete this post', post_path(@post), method: :delete %>
<% end %>
<hr>
<%= link_to 'Home', root_path %>
