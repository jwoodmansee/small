<%= link_to @name, posts_path %>
<h1><%= @post.title %></h1>

<h3><%= @post.teaser %>	</h3>

<p><%= @post.content %></p>

<hr>


<hr>
<% if current_user.id == @post.user_id %>
	<%= link_to 'Your posts', posts_path %> ||
	<%= link_to 'Edit this post', edit_post_path(@post) %> ||
	<%= link_to 'Delete this post', post_path(@post), method: :delete %>
<% end %>
