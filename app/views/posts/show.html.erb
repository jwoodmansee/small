<%= link_to "#{@name}'s posts", posts_path %>
<h1><%= image_tag current_user.image.url(:small) %><%= @post.title %></h1>

<h3><%= @post.teaser %>	</h3>

<p><%= @post.content %></p>

<hr>
<%= link_to 'Add comment', new_post_comment_path(@post) %>

<hr>
<% if current_user.id == @post.user_id %>
	<%= link_to 'Your posts', posts_path %> ||
	<%= link_to 'Edit this post', edit_post_path(@post) %> ||
	<%= link_to 'Delete this post', post_path(@post), method: :delete %>
<% end %>
<hr>
<%= link_to 'Home', root_path %>