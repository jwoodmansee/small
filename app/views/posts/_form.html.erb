<div class="row">
	<div class="forms col s6 offset-s3 b-town">
		<div class="in_forms">
			<%= form_for @post do |f| %>	
				<%= f.label :title %>
				<%= f.text_field :title %>
				<br>
				<%= f.label :teaser %>
				<%= f.text_field :teaser %>
				<br>
				<div class="text-area">
					<%= f.label :content %>
					<%= f.text_area :content %>
				</div>
				<br>
				<%= f.submit %>
			<% end %>	
		</div>
	</div>
</div>
