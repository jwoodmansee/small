<% if current_user %>
  <h2></h2> 
<% else %>
  <h2> Welcome to Small </h2>
<% end %>    

  <% if @posts.any? %>
    <ul style="list-style: none;">
    <div class="row">
     <% @posts.each do |post| %>
        <div class="col s12 m6 offset-m3">
          <div class="card">
            <div class="card-title">
              <span class="center-align"><%= link_to image_tag(post.user.image.url(:small)), 
               post_path(post) %><%= link_to post.title, post_path(post) %></span> 
            </div>
            <div class="card-action">
              <p class="center-align"> <%= post.teaser %> </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
      
  <% else %> 
    <p> There are currently no Post. Please come back later </p>
  <% end %>  
